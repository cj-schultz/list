<header id="page-header">
  <div id="masthead">
    <h1><%= link_to "Get-er-done", root_path %></h1>
	  <nav>
	  	<p>
	  		<%= link_to "Who else is using this app?", users_path %>
	  		<% if current_user %>
	  			| <%= link_to current_user.name,  current_user %>
	  			<%= link_to "Sign Out", session_path, method: :delete, class: 'submit-button' %>
	  		<% else %>
	  			<%= link_to "Sign Up", signup_path, class: 'submit-button' %>
	  			<%= link_to "Sign In", signin_path, class: 'submit-button' %>
	  		<% end %>
	  	</p>
	  </nav>
  </div>
</header>