<aside id="sidebar">
	<nav>
		<table>
			<tr>
				<td>
					<%= link_to "New Task", new_group_url, class: 'submit-button' %>
				</td>
				<td>
					<%= link_to "New Group", new_group_url, class: 'submit-button' %>
				</td>
				<td>
					<%= link_to "Show All Groups", groups_url, class: 'submit-button' %>
				</td>
			</tr>
		</table>
	</nav>
	<div id="todays-tasks">
		<% if current_user %>
			<% todays_tasks = gather_tasks(current_user) %>
			<h3> Today's Tasks </h3>
			<% if todays_tasks.size > 0 %>			
				<ul>
					<% todays_tasks.each do |task| %>
						<li>
							<%= link_to task.title, group_task_path(task.group, task), class: 'today-link' %> (<%= task.group.title %>)
							<%= link_to "", group_task_path(task.group, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
         			<%= link_to "", edit_group_task_path(task.group, task), class: 'edit-button' %></li>
					<% end %>
				</ul>
			<% else %>
				<h3 class="none">None</h3>
			<% end %>
		<% end %>
	</div>
</aside>