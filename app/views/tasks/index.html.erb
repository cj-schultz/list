<header id="header">
  <h1>
    <%= @group.title %>
    <%= link_to "", @group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
    <%= link_to "", edit_group_path(@group), class: 'edit-button' %>
  </h1>
  <%= link_to "New Task", new_group_task_path(@group), class: 'submit-button' %>
<header>

<% if @pending_tasks.count > 0 %>
  <h2> <%= pluralize @pending_tasks.count, "Pending Task" %> </h2>

  <%= form_tag 'complete/tasks', :method => :put do %>
    <ul id="tasks">
      <% @pending_tasks.each do |task| %>
        <li>
          <article class="task">
            <header>
              <h2>
                <%= task.title %>
                <%= link_to "", "/groups/#{@group.id}/complete/#{task.id}", method: :put, class: 'checkmark-button' %>
                <%= link_to "", group_task_path(@group, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
                <%= link_to "", edit_group_task_path(@group, task), class: 'edit-button' %>
              </h2>
            </header>
            <p>
              <%= truncate(task.description, length: 150, separator: ' ') %>
            </p>
            <table>
              <tr>
                <th> Due Date </th>
                <% if task.overdue? %>
                <td class="red"><%= task.due_date %></td>
                <% elsif task.due_today? %>
                <td class="yellow"><%= task.due_date %></td>
                <% else %>
                <td><%= task.due_date %></td>
                <% end %>
              </tr>
            </table>
          </article>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<% if @completed_tasks.count > 0 %>
  <h2> <%= pluralize(@completed_tasks.count, "Completed Task") %> </h2>

  <ul id="tasks">
    <% @completed_tasks.each do |task| %>
      <li>
        <article class="task">
          <header>
            <h2>
              <%= task.title %>
              <%= link_to "", group_task_path(@group, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
              <%= link_to "", edit_group_task_path(@group, task), class: 'edit-button' %>
            </h2>
          </header>
          <p>
            <%= truncate(task.description, length: 150, separator: ' ') %>
          </p>
          <table>
            <tr>
              <th> Due Date </th>
              <td><%= task.due_date %></td>
            </tr>
          </table>
        </article>
      </li>
    <% end %>
  </ul>
<% end %>