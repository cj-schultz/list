<ul id="groups">
  <% @groups.each do |group| %>
    <li>
      <article class="group">
        <header>
          <h2>
            <%= link_to group.title, group_tasks_path(group), class: 'link' %>    
            <%= link_to "", group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-button' %>
            <%= link_to "", edit_group_path(group), class: 'edit-button' %>
          </h2>
        </header>
        <p>
          <%= pluralize(pending_tasks(group).count, "Pending Task") %>
        </p>
      </article>
    </li>
  <% end %>
</ul>
